@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class=" card-shadow border-0 mt-4 ">
    <div class="card-header bg-secondry bg-gradient ml-0 py-3 bg-primary ">
        <div class=" row ">
            <div class=" col-16 text-center ">
                <br>
                <h2 class=" text-white  py-2">Log In Page </h2>

            </div>
        </div>
    </div>
</div>

<div class="card-body p-4  ">
    
        <div class="card shadow-lg border-3">

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="  col-8">
                <div class=" form-line">
                    <input asp-for="Input.Email" class="form-control mt-4 " placeholder="Email"   />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
                <div class="col-8">
                    <input asp-for="Input.Password" class="form-control mt-4 " placeholder="Pass"  />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary">Log in</button>
                </div>
                <br/>
                <div class=" row col-12 " >
                    <div class="col-4 " >
                    <a class=" col-12 btn btn-outline-primary" id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                        Resend email confirmation
                        </a>
                    </div>
                    <div class="col-4 " >
                        <a class=" col-12 btn btn-outline-danger" id="forgot-password" asp-page="./ForgotPassword">
                        Forgot your password?
                        </a>
                    </div>
                    <div class="col-4 ">
                        <a class=" col-12 btn btn-outline-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Register as a new user
                        </a>
                    </div>
               
                </div>
            </form>
        </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
