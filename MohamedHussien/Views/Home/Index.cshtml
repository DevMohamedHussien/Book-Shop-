@model IEnumerable<MohamedHussien.Models.Product>

<div class=" row pb-3 ">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class=" row p-2 ">
                <div class=" col-12 p-1">
                    <div class=" card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-1">
                            <div class="pl-1">
                                <p class=" card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center"> by<br />@product.Author<br /> </p>
                            </div>
                            <div class=" p-lg-1">
                                <p class="text-dark text-opacity-75 text-center">
                                    List Price
                                    <span class="text-decoration-line-through">@product.ListPrice</span>
                                </p>
                            </div>
                            <div class=" p-lg-1">
                                <p class="text-dark text-opacity-75 text-center"> As low as <span>@product.Price100</span></p>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-ProductId="@product.Id" class=" text-center btn btn-primary bg-gradient border-0 form-control"> Details </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

